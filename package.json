{
  "name": "dms-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --poll src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . -c .eslintrc.json \"src/**/*.ts\"",
    "lint:fix": "eslint . -c .eslintrc.json \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "ts-node src/lib/db/runMigrations.ts",
    "db:seed": "ts-node src/lib/db/runSeeds.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:db:migrate": "docker-compose -f docker-compose.dev.yml exec app pnpm db:migrate",
    "docker:db:seed": "docker-compose -f docker-compose.dev.yml exec app pnpm db:seed",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "author": "pindiola@gmail.com",
  "license": "ISC",
  "description": "Document Management System API",
  "dependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "kysely": "^0.27.6",
    "morgan": "^1.10.0",
    "mysql2": "^3.13.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.5.3",
    "vitest": "^3.0.9"
  },
  "packageManager": "pnpm@8.15.4",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
